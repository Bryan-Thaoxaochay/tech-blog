{{#if logged_in}}

{{#each blogposts as |blogpost|}}
<br>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <button id="title-btn" class="btn"><b>{{ blogpost.name }}</b></button>{{ format_date blogpost.date_created }}
            </div>
            <div class="card-body">
                <p class="card-text">{{ blogpost.description }}</p>
            </div>
        </div>
    </div>
</div>

<br>
{{/each}}

{{else}}
{{#each blogposts as |blogpost|}}
<br>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <b>{{ blogpost.name }}</b> {{ format_date blogpost.date_created }}
            </div>
            <div class="card-body">
                <p class="card-text">{{ blogpost.description }}</p>
            </div>
        </div>
    </div>
</div>

<br>
{{/each}}

{{/if}}