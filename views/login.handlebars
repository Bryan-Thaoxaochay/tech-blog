<div class="row">
    <div class="col-md-12">
        <header>
            <p><b>Please Sign Up Here</b></p>
        </header>
    </div>
</div>

<form>
    <div class="mb-3">
        <div class="row">
          <div class="col-md-12">
                <label class="form-label">Name (i.e. Eric Gordon)</label>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
                <input id="name-signup" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
          </div>
        </div>
    </div>

    <div class="mb-3">
        <div class="row">
          <div class="col-md-12">
                <label for="exampleInputEmail1" class="form-label">Email address</label>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
                <input type="email" id="email-signup" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
          </div>
        </div>
    </div>

    <div class="mb-3">
        <div class="row">
            <div class="col-md-12">
                <label for="exampleInputPassword1" class="form-label">Password</label>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <input type="password" id="password-signup" class="form-control" id="exampleInputPassword1">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <button type="submit" id="signup-form" class="btn btn-primary">Sign Up</button>
        </div>
    </div>
</form>

